<?xml version="1.0" encoding="utf-8"?><!-- This linear layout contains a single item displayed in the MainActivity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    tools:context="com.junhyeoklee.som.ui.activity.MainActivity">

    <!-- A priority circle that is colored in programmatically in the adapter code -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_up"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:contentDescription="@string/content_description_water_icon"
                android:tint="@color/sky"
                app:srcCompat="@drawable/ic_circle_black_24dp" />

            <View
                android:id="@+id/v_step_connector_bottom"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary" />

            <ImageView
                android:id="@+id/img_down"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:contentDescription="@string/content_description_water_icon"
                android:tint="@color/sky"
                app:srcCompat="@drawable/ic_circle_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TextView that displays the description -->
            <TextView
                android:id="@+id/waterAmount"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarunpenr"
                android:textSize="18sp"
                tools:text="100 ml" />

            <!-- TextView that displays the update date -->
            <TextView
                android:id="@+id/taskUpdatedAt"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nanumbarunpenr"
                android:textSize="12sp"
                tools:text="11/11/1111" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


